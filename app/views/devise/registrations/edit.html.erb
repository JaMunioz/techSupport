<p style="text-align:left; color: white;">
  <font size="+3">Edit <%= resource_name.to_s.humanize %></font>
</p>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.label :first_name, class: "form-label", style: "color: white;"   %>
    <%= f.text_field :first_name, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :last_name, class: "form-label", style: "color: white;"   %>
    <%= f.text_field :last_name, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :telephone, class: "form-label", style: "color: white;"   %>
    <%= f.text_field :telephone, class: "form-control" %>

  </div>
  <div class="field">
    <%= f.label :email,class: "form-label", style: "color: white;" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :new_password,class: "form-label", style: "color: white;" %> <i style="color: white;">(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password",class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :new_password_confirmation,class: "form-label", style: "color: white;" %><i style="color: white;"> (<%= @minimum_password_length %> characters minimum)</i><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "form-control" %>
  </div>
  <br>
  <div class="field">
    <%= f.label :current_password,class: "form-label", style: "color: white;" %> <i style="color: white;">(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password",class: "form-control" %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>
<br>
<p style="text-align:left; color: white;">
  <font size="+3">Cancel my account</font>
</p>

<p style="color: white;">Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", user_path(current_user.id), class: ["btn", "btn-cancel"] %>
