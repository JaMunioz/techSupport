<div class="row ml-0 mt-3">
  <h2 style= "color: white;">Rate your attention:</h2>
</div>
<div class="row ml-0 mt-2">
  <div class="col-6">
    <p style= "color: white;">Please rate the attention received (0-5):</p>
    <%= form_with model: @executive_report do |form| %>
      <div class="mb-3" style= "color: white;">
        <%= form.label :calification, class: "form-label" %>
        <%= form.number_field :calification, in: 0.0..5.0, step: 0.5,class: "form-control" %>
      </div>
      <div class="mb-3">
        <%= form.number_field :user_id, style: "display: none", value: @executive_id %>
      </div>
      <div class="mb-3">
        <%= form.number_field :ticket_id, style: "display: none", value: @ticket_id %>
      </div>
      <div class="mb-3">
        <%= form.number_field :user1id, style: "display: none", value: @user_id %>
      </div>
      <hr>
      <div class="mb-3">
        <%= form.submit "Send calification", class: ["btn", "btn-confirm"] %>
        <%= link_to "Back", :back, class: ["btn", "btn-cancel"] %>
      </div>
    <% end %>
  </div>
</div>
