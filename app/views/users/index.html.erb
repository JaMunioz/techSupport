<script>
    function sortTable(tableName, selectName, priorityN, cdN) {
        var table, rows, switching, i, x, y, shouldSwitch;
        var selectBox = document.getElementById(selectName);
        var option = selectBox.options[selectBox.selectedIndex].value;
        var priorityDict = {
            "not define": 0, "low": 1, "normal": 2, "high": 3, "urgent": 4
        }
        if (option === "priority") {
            var dir = "desc";
            var n = priorityN;
        } else if (option === "id") {
            var dir = "asc";
            var n = 1;
        } else {
            var dir = "desc";
            var n = cdN;
        }
        table = document.getElementById(tableName);
        switching = true;
        while (switching) {
            switching = false;
            rows = table.rows;
            for (i = 1; i < (rows.length - 1); i++) {
                shouldSwitch = false;
                x = rows[i].getElementsByTagName("td")[n];
                y = rows[i + 1].getElementsByTagName("td")[n];
                if (option === "priority") {
                    if (dir === "asc") {
                        if (priorityDict[x.innerHTML.toLowerCase()] > priorityDict[y.innerHTML.toLowerCase()]) {
                            shouldSwitch = true;
                            break;
                        }
                    } else if (dir === "desc") {
                        if (priorityDict[x.innerHTML.toLowerCase()] < priorityDict[y.innerHTML.toLowerCase()]) {
                            shouldSwitch = true;
                            break;
                        }
                    }
                } else {
                    if (option === "id") {
                        if (dir === "asc") {
                            if (parseInt(x.innerHTML.toLowerCase(), 10) > parseInt(y.innerHTML.toLowerCase(), 10)) {
                                shouldSwitch = true;
                                break;
                            }
                        } else if (dir === "desc") {
                            if (parseInt(x.innerHTML.toLowerCase(), 10) < parseInt(y.innerHTML.toLowerCase(), 10)) {
                                shouldSwitch = true;
                                break;
                            }
                        }
                    } else {
                        if (dir === "asc") {
                            if (x.innerHTML.toLowerCase() > y.innerHTML.toLowerCase()) {
                                shouldSwitch = true;
                                break;
                            }
                        } else if (dir === "desc") {
                            if (x.innerHTML.toLowerCase() < y.innerHTML.toLowerCase()) {
                                shouldSwitch = true;
                                break;
                            }
                        }
                    }
                }
            }
            if (shouldSwitch) {
                rows[i].parentNode.insertBefore(rows[i + 1], rows[i]);
                switching = true;
            }
        }
    }
</script>
